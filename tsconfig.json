{
  "compilerOptions": {
    // Saída dos arquivos compilados
    "rootDir": "./src",
    "outDir": "./dist",

    // Ambiente Node + ESM
    "module": "NodeNext",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "types": ["node"],

    // Mapas de debug e declarações
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Verificações de tipo mais seguras
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Outras opções recomendadas
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
